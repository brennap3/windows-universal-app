        <Button x:Name = "Add" Content = "Add" HorizontalAlignment = "Left"  
         VerticalAlignment = "Top" Margin = "121,384,0,0" Click = "Add_Click"/>

        <TextBlock x:Name = "textBlock" HorizontalAlignment = "Left"  
         TextWrapping = "Wrap" Text = "Email" VerticalAlignment = "Top"  
         Margin = "64,258,0,0" Width = "52" />

        <TextBox x:Name = "textBox" HorizontalAlignment = "Left" TextWrapping = "Wrap"  
         VerticalAlignment = "Top" Margin = "121,258,0,0" Width = "164"/>

        <TextBlock x:Name = "textBlock1" HorizontalAlignment = "Left"  
         TextWrapping = "Wrap" Text = "Phone" VerticalAlignment = "Top"  
         Margin = "64,320,0,0" Width = "52"/>

        <TextBox x:Name = "textBox1" HorizontalAlignment = "Left" TextWrapping = "Wrap"  
         VerticalAlignment = "Top" Margin = "121,320,0,0" Width = "169"/>

        <TextBlock x:Name = "textBlock2" HorizontalAlignment = "Left"  
         Margin = "71,439,0,0" TextWrapping = "Wrap"  
         VerticalAlignment = "Top" Width = "219" Height = "69"/>

        <Button Content = "Go to Main Page" Margin = "121,439,0,169" Click = "Button_Click"/>
    
        </Grid>
    </StackPanel>
</Page>
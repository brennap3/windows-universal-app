        <Grid Background="Blue" x:Name="body">
            
        <Hub Header = "Welcome to the sign in page" Margin="10,10,-10,-10"/>
        <Button x:Name = "Retrieve" Content = "Retrieve" HorizontalAlignment = "Left"  
